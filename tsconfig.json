{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ES2022",
      "strict": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist/",
      "baseUrl": "./",
      "pretty": true,
      "paths": {
        "@db/*": ["src/*"],
      }
    },
    "include": [
      "src",
    ],
  }